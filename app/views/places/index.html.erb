<%= render 'loader' %>

  <div class="header__container">
    <div class="header__speaker">
      <%= render 'speaker' %>
    </div>
  </div>

    <% @places.each do |place| %>
      <%= render 'place_modal', place: place %>
    <% end %>

    <div class="map">
      <div class="map-inner">
        <% @places.each do |place| %>
          <%= link_to('#', {style:"left: #{place.xpos}%;top: #{place.ypos}%;", class:"md-trigger place-link", data: {modal: 'modal-1', target: "##{place.title}"}}) do %>
            <% if mobile_device? %>
              <%= image_tag(place.image_file_name+'.png') %>
            <% else %>
              <%= image_tag(place.image_file_name+'@2x.png') %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
